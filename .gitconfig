[color]
    ui = auto
[user]
	name = Philip Belemezov
	email = philip@belemezov.net
	signingkey = 52F571D766840F16
[core]
    editor = vim
    excludesfile = ~/.gitignore
    preloadindex = true

[alias]
    ci = commit
    st = status
    co = checkout
    df = diff
    br = branch
    lg = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short
    info = remote -v
    who = shortlog -s --
    changes = diff --name-status -r
    diffstat = diff --stat -r
    gitkconflict = !gitk --left-right HEAD...MERGE_HEAD

[gui]
    diffcontext = 3
    commitmsgwidth = 79
    spellingdictionary = en_US
    editor = emacs
	tabsize = 4
	fontdiff = -family \"SF Mono\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
	editor = code
	encoding = UTF-8

[include]
    path = ~/.gitalias.txt
    path = .gitconfig-local

[tig]
    show-rev-graph = true
    show-line-numbers = yes
    line-graphics = default
    tab-size = 4

[tig "color"]
    cursor = yellow red bold

[difftool]
    prompt = false

[mergetool]
	prompt = false
[cola]
	tabwidth = 4
[push]
	default = simple
[commit]
	gpgsign = true
[gpg]
	program = gpg
